    <header>
        <div class="header-content ">
            <div class="header-content-inner">
                <h2><%= title %></h2>
                <hr>
                <p>Connect.Share.Enjoy</p>
                 <form method="POST" action="update_status" class="form-horizontal" role="form" >
                    <div class="form-group">
                        <label for="stat" class="col-sm-5 control-label">I want to say</label>
                        <div class="col-sm-5">
                            <textarea name="stat" class="form-control" cols="30" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        
                            <div class="col-sm-5">
                                <input type="hidden" class="form-control" name="uname" id="uname" value=<%= user%> required>
                            </div>
                    </div>
                    <div class="form-group">
                        
                            <input type="submit" class="btn btn-default" name = "share" value = "Share!">
                        
                    </div>
                </form>
                <h3>Last 3 updates of <%= user%></h3>

                <ul>
                    <% 
                        
                        for(var i=supplies.length-1; i>supplies.length-4; i--) { %>
                        <li>
                           
                                <h4><%= supplies[i].status %></h4>Posted on <%= supplies[i].date %>
                            
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </header>

    <section class="bg-dark" id="chat" onload="connect();">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Join a chat</h2>
                    <hr class="light">
                    

                    <div id="demoContainer">
                    <div id="connectControls">
                        <div id="iam">Not yet connected...</div>
                        <br />
                        <strong>Connected users:</strong>
                        <div id="otherClients"></div>
                    </div>
                    <div id="videos">
                        <video autoplay="autoplay" class="easyrtcMirror" id="selfVideo" muted="muted" volume="0" ></video>
                        <div style="position:relative;float:left;">
                        <video autoplay="autoplay" id="callerVideo"></video>
                        </div>
                        <!-- each caller video needs to be in it's own div so it's close button can be positioned correctly -->
                    </div>
                </div>


                        <div>
                            <h4>Or you can start a chat room.......</h4>
                            <a href="demo_room.html">Click here</a>

                        </div>

                </div>
                </div>
            </div>


        </div>
    </section>
    

